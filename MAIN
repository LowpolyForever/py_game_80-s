#Scuffed Donky KONG (Brian, Leo, Harris)

import pygame
pygame.init()

#constants
SCREEN_DIMENSIONS = (480,640)
GROUND_HEIGHT = (620)
gravity = (2)
jump_limit = GROUND_HEIGHT - 50

#Colors
BLACK = (0,0,0)
WHITE = (255,255,255)
BLUE = (78,113,228)
GREEN = (55,206,45)

#Mario Position
x = (240)
y = (620)
velocity = 3

#functions

#Setup
screen = pygame.display.set_mode(SCREEN_DIMENSIONS)
pygame.display.set_caption ("MAIN")

game_over = False
while not game_over:
    pygame.time.delay(10)#delays each frame by 10 millisecs
    for event in pygame.event.get():
        if event.type == pygame.KEYDOWN and event.key == pygame.K_ESCAPE: #Quits Game when escape key pressed
            game_over = True

    keys = pygame.key.get_pressed()

    if keys[pygame.K_LEFT]: #moves mario left
        x = x - 1 * velocity
    if keys[pygame.K_RIGHT]: #moves mario right
        x = x + 1 * velocity
    if keys[pygame.K_SPACE] and y > jump_limit: #makes mario jump
        y = y - 4
    if y < GROUND_HEIGHT: #gives mario gravity
        y = y + 1 * gravity


    screen.fill((0,0,0))  # Fills the screen with black
    pygame.draw.rect((screen), (WHITE), ((x,y),(10,-20)),) #draws mario

    pygame.display.update()






